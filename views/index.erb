<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Place favicon.ico in the root directory -->

        <link rel="stylesheet" href="scripts/bower_components/bootstrap/dist/css/bootstrap.css">
        <link rel="stylesheet" href="scripts/styles/main.css">
        <script src="scripts/bower_components/modernizr/modernizr.js"></script>
        <script src="scripts/bower_components/mustache/mustache.js"></script>
    </head>
    <body>
        <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        <!-- Add your site or application content here -->

        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-4">
                    <h1>Buses</h1>
                    <table class="table table-hover" id="bus-results">
                        <tbody id="bus-tbody">
                            <tr>
                                <th>Route</th>
                                <th>Leaving at</th>
                            </tr>
                        </tbody>
                    </table>
                    <div id="bus-loader">
                        <img src="/images/ajax-loader.gif">
                    </div> 

                    <script id="bus-results-template" type="x-tmpl-mustache">
                        <tr>
                            <td>
                                {{line}}
                            </td>
                            <td>
                                {{expected_departure_time}}
                            </td>
                        </tr>                    
                    </script>

                </div>
                <div class="col-sm-4">
                    <h1>Denmark Hill</h1>
                    <table class="table table-hover" id="denmark-results">
                        <tbody id="denmark-tbody">
                            <tr>
                                <th>Destination</th>
                                <th>Leaving at</th>
                            </tr>
                        </tbody>
                    </table>
                    <div id="denmark-loader">
                        <img src="/images/ajax-loader.gif">
                    </div>

                    <script id="denmark-results-template" type="x-tmpl-mustache">
                        <tr>
                            <td>
                                {{destination_name}}
                            </td>
                            <td>
                                {{aimed_departure_time}}
                            </td>
                        </tr>                    
                    </script>

                </div>

                <div class="col-sm-4">
                    <h1>East Dulwich</h1>
                    <table class="table table-hover" id="dulwich-results">
                        <tbody id="dulwich-tbody">
                            <tr>
                                <th>Destination</th>
                                <th>Leaving at</th>
                            </tr>
                        </tbody>
                    </table> 
                    <div id="dulwich-loader">
                        <img src="/images/ajax-loader.gif">
                    </div>

                    <script id="dulwich-results-template" type="x-tmpl-mustache">
                        <tr>
                            <td>
                                {{destination_name}}
                            </td>
                            <td>
                                {{aimed_departure_time}}
                            </td>
                        </tr>                    
                    </script>

                </div>
            </div>
        </div>


        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="bower_components/jquery/dist/jquery.min.js"><\/script>')</script>
        <script src="scripts/plugins.js"></script>
        <script src="scripts/main.js"></script>

    </body>
</html>